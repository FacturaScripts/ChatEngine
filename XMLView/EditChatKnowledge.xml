<view>
    <columns>
        <group name="data" numcolumns="12">
            <column name="code" display="none" order="100">
                <widget type="text" fieldname="idknowledge" required="true" />
            </column>
            <column name="keywords" order="110">
                <widget type="text" fieldname="keywords" required="true" />
            </column>
            <column name="bannedwords" order="120">
                <widget type="text" fieldname="bannedwords" />
            </column>
            <column name="certainty" order="130">
                <widget type="number" fieldname="certainty" />
            </column>
            <column name="voting" order="140">
                <widget type="checkbox" fieldname="voting" />
            </column>
            <column name="date" order="150">
                <widget type="date" fieldname="creationdate" readonly="true" />
            </column>
            <column name="answer" numcolumns="12" order="160">
                <widget type="textarea" fieldname="answer" required="true" />
            </column>
            <column name="link" order="170">
                <widget type="text" fieldname="link" />
            </column>
        </group>
    </columns>
</view>