<view>
    <columns>
        <group name="data" numcolumns="12">
            <column name="code" order="100">
                <widget type="text" fieldname="idchat" required="true" readonly="true" />
            </column>
            <column name="contact" order="110">
                <widget type="autocomplete" fieldname="idcontacto" onclick="EditContacto">
                    <values source="contactos" fieldcode="idcontacto" fieldtitle="email"></values>
                </widget>
            </column>
            <column name="certainty" order="120">
                <widget type="number" fieldname="certainty" decimal="0" readonly="true" />
            </column>
            <column name="date" order="130">
                <widget type="date" fieldname="creationtime" readonly="true" />
            </column>
        </group>
    </columns>
</view>