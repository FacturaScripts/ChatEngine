<?xml version="1.0" encoding="UTF-8"?>
<!--
    Document   : chatmessages.xml
    Author     : Carlos Garcia Gomez
    Description:
        Structure for the chatmessages table.
-->
<table>
    <column>
        <name>chatvars</name>
        <type>text</type>
    </column>
    <column>
        <name>content</name>
        <type>text</type>
    </column>
    <column>
        <name>creationtime</name>
        <type>timestamp</type>
        <null>NO</null>
    </column>
    <column>
        <name>idchat</name>
        <type>integer</type>
        <null>NO</null>
    </column>
    <column>
        <name>idcontacto</name>
        <type>integer</type>
    </column>
    <column>
        <name>idmessage</name>
        <type>serial</type>
        <null>NO</null>
        <default>nextval('chatmessages_idmessage_seq'::regclass)</default>
    </column>
    <column>
        <name>ischatbot</name>
        <type>boolean</type>
        <null>NO</null>
        <default>false</default>
    </column>
    <column>
        <name>unmatched</name>
        <type>boolean</type>
        <null>NO</null>
        <default>false</default>
    </column>
    <constraint>
        <name>chatmessages_pkey</name>
        <type>PRIMARY KEY (idmessage)</type>
    </constraint>
    <constraint>
        <name>ca_chatmessages_chatsessions</name>
        <type>FOREIGN KEY (idchat) REFERENCES chatsessions (idchat) ON DELETE CASCADE ON UPDATE CASCADE</type>
    </constraint>
    <constraint>
        <name>ca_chatmessages_contactos</name>
        <type>FOREIGN KEY (idcontacto) REFERENCES contactos (idcontacto) ON DELETE CASCADE ON UPDATE CASCADE</type>
    </constraint>
</table>